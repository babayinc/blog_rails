<h1><%= @article.title %></h1>
<p><%= @article.text %></p>
<p>
  <% @article.comments.each do |comment| %>
  <p>
    <i><%= comment.author %> said: </i><br />
    <%= comment.body %>
  </p>
    
  <% end %>
</p>
<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <p>
        <%= f.label :author %><br />
        <%= f.text_field :author %>
      </p>
      <p>
        <%= f.label :body %><br />
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    </p>
  <% end %>
</p>
